<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" parallel="tests" thread-count="1">

    <listeners>
        <listener class-name="utils.RetryListener"/>
        <listener class-name="utils.AllureTestListener"/>
    </listeners>

    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.LogoutTest"/>
            <class name="tests.ui.ProjectTest"/>
            <class name="tests.ui.CreateTestCaseTest"/>
        </classes>
    </test>

    <test name="FirefoxTest">
        <parameter name="browser" value="mozilla"/>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.LogoutTest"/>
            <class name="tests.ui.ProjectTest"/>
            <class name="tests.ui.CreateTestCaseTest"/>
        </classes>
    </test>

    <test name="ApiTest">
        <classes>
            <class name="tests.api.ProjectTest"/>
            <class name="tests.api.TestCaseTest"/>
        </classes>
    </test>

</suite>